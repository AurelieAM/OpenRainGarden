# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /test                       controllers.Application.page1()
GET     /rain-garden/register       controllers.Application.registerRainGarden(id: Long ?= 0)
GET     /browse-garden              controllers.Application.browseGarden()
POST    /rain-garden/register       controllers.Application.postRainGardenRegister()
GET		  /login           						controllers.Application.login()
POST	  /login				           		controllers.Application.postLogin()
GET		  /signup						          controllers.Application.signup()
POST	  /signup						          controllers.Application.postSignUp()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
